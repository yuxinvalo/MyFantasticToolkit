/* HSBC Little Worker - Light Theme */
/* 浅色主题样式文件 */

/* 导入基础样式 */
/* 注意：QSS不支持@import，需要在代码中手动加载base.qss */

/* =============================================================================
   浅色主题颜色变量 (通过注释记录)
   主色调: #2196f3 (蓝色)
   背景色: #ffffff (白色)
   表面色: #f8f9fa (浅灰)
   文字色: #212529 (深灰)
   次要文字: #6c757d (中灰)
   边框色: #dee2e6 (浅灰边框)
   悬停色: #e9ecef (浅灰悬停)
   焦点色: #2196f3 (蓝色焦点)
   成功色: #28a745 (绿色)
   警告色: #ffc107 (黄色)
   错误色: #dc3545 (红色)
   信息色: #17a2b8 (青色)
============================================================================= */

/* =============================================================================
   主窗口和基础容器
============================================================================= */

QMainWindow {
    background-color: #ffffff;
    color: #212529;
}

QDialog {
    background-color: #ffffff;
    color: #212529;
}

QFrame {
    background-color: #ffffff;
    border: 1px solid #dee2e6;
    color: #212529;
}

/* =============================================================================
   按钮样式
============================================================================= */

QPushButton {
    background-color: #f8f9fa;
    border: 1px solid #dee2e6;
    color: #212529;
}

QPushButton:hover {
    background-color: #e9ecef;
    border-color: #adb5bd;
}

QPushButton:pressed {
    background-color: #dee2e6;
}

QPushButton:default {
    background-color: #2196f3;
    color: white;
    border-color: #2196f3;
}

QPushButton:default:hover {
    background-color: #1976d2;
    border-color: #1976d2;
}

QPushButton:disabled {
    background-color: #e9ecef;
    color: #6c757d;
    border-color: #dee2e6;
}

/* =============================================================================
   输入控件样式
============================================================================= */

QLineEdit, QSpinBox, QComboBox, QTextEdit, QPlainTextEdit {
    background-color: #ffffff;
    border: 1px solid #dee2e6;
    color: #212529;
}

QLineEdit:focus, QSpinBox:focus, QComboBox:focus, QTextEdit:focus, QPlainTextEdit:focus {
    border-color: #2196f3;
    outline: none;
}

QLineEdit:disabled, QSpinBox:disabled, QComboBox:disabled {
    background-color: #e9ecef;
    color: #6c757d;
}

/* 下拉框特殊样式 */
QComboBox::drop-down {
    background-color: #f8f9fa;
    border-left: 1px solid #dee2e6;
}

QComboBox::down-arrow {
    border-top-color: #6c757d;
}

QComboBox QAbstractItemView {
    background-color: #ffffff;
    border: 1px solid #dee2e6;
    selection-background-color: #2196f3;
    selection-color: white;
    color: #212529;
}

/* =============================================================================
   标签页样式
============================================================================= */

QTabWidget::pane {
    border: 1px solid #dee2e6;
    background-color: #ffffff;
}

QTabBar::tab {
    background-color: #f8f9fa;
    border: 1px solid #dee2e6;
    border-bottom-color: #dee2e6;
    color: #6c757d;
}

QTabBar::tab:selected {
    background-color: #ffffff;
    border-bottom-color: #ffffff;
    color: #212529;
}

QTabBar::tab:hover {
    background-color: #e9ecef;
    color: #212529;
}

/* =============================================================================
   滚动区域和滚动条样式
============================================================================= */

QScrollArea {
    border: none;
    background-color: #ffffff;
}

QScrollBar:vertical {
    background-color: #f8f9fa;
}

QScrollBar::handle:vertical {
    background-color: #dee2e6;
}

QScrollBar::handle:vertical:hover {
    background-color: #adb5bd;
}

QScrollBar:horizontal {
    background-color: #f8f9fa;
}

QScrollBar::handle:horizontal {
    background-color: #dee2e6;
}

QScrollBar::handle:horizontal:hover {
    background-color: #adb5bd;
}

/* =============================================================================
   复选框和单选框样式
============================================================================= */

QCheckBox, QRadioButton {
    color: #212529;
}

QCheckBox::indicator, QRadioButton::indicator {
    border: 1px solid #dee2e6;
    background-color: #ffffff;
}

QCheckBox::indicator:checked {
    background-color: #2196f3;
    border-color: #2196f3;
}

QRadioButton::indicator:checked {
    background-color: #2196f3;
    border-color: #2196f3;
}

QCheckBox::indicator:hover, QRadioButton::indicator:hover {
    border-color: #adb5bd;
}

/* =============================================================================
   标签样式
============================================================================= */

QLabel {
    color: #212529;
}

/* =============================================================================
   分组框样式
============================================================================= */

QGroupBox {
    border: 1px solid #dee2e6;
    color: #212529;
}

QGroupBox::title {
    color: #2196f3;
}

/* =============================================================================
   滑块样式
============================================================================= */

QSlider::groove:horizontal {
    border: 1px solid #dee2e6;
    background-color: #f8f9fa;
}

QSlider::handle:horizontal {
    background-color: #2196f3;
    border: 1px solid #2196f3;
}

QSlider::handle:horizontal:hover {
    background-color: #1976d2;
    border-color: #1976d2;
}

QSlider::groove:vertical {
    border: 1px solid #dee2e6;
    background-color: #f8f9fa;
}

QSlider::handle:vertical {
    background-color: #2196f3;
    border: 1px solid #2196f3;
}

QSlider::handle:vertical:hover {
    background-color: #1976d2;
    border-color: #1976d2;
}

/* =============================================================================
   进度条样式
============================================================================= */

QProgressBar {
    border: 1px solid #dee2e6;
    background-color: #f8f9fa;
    color: #212529;
}

QProgressBar::chunk {
    background-color: #2196f3;
}

/* =============================================================================
   列表和树形控件样式
============================================================================= */

QListWidget, QTreeWidget, QTableWidget {
    background-color: #ffffff;
    border: 1px solid #dee2e6;
    color: #212529;
}

QListWidget::item:selected, QTreeWidget::item:selected, QTableWidget::item:selected {
    background-color: #2196f3;
    color: white;
}

QListWidget::item:hover, QTreeWidget::item:hover, QTableWidget::item:hover {
    background-color: #f8f9fa;
}

/* =============================================================================
   菜单样式
============================================================================= */

QMenuBar {
    background-color: #ffffff;
    color: #212529;
    border-bottom: 1px solid #dee2e6;
}

QMenuBar::item:selected {
    background-color: #f8f9fa;
}

QMenu {
    background-color: #ffffff;
    border: 1px solid #dee2e6;
    color: #212529;
}

QMenu::item:selected {
    background-color: #2196f3;
    color: white;
}

QMenu::separator {
    background-color: #dee2e6;
}

/* =============================================================================
   工具栏样式
============================================================================= */

QToolBar {
    background-color: #f8f9fa;
    border: 1px solid #dee2e6;
    color: #212529;
}

QToolButton:hover {
    background-color: #e9ecef;
}

QToolButton:pressed {
    background-color: #dee2e6;
}

/* =============================================================================
   状态栏样式
============================================================================= */

QStatusBar {
    background-color: #f8f9fa;
    color: #212529;
    border-top: 1px solid #dee2e6;
}

/* =============================================================================
   自定义插件组件样式
============================================================================= */

/* 插件项容器 */
PluginItemWidget {
    background-color: #ffffff;
    border: 1px solid #dee2e6;
}

PluginItemWidget:hover {
    border-color: #2196f3;
    background-color: #f8f9ff;
}

/* =============================================================================
   状态和语义颜色样式
============================================================================= */

/* 成功状态 */
.status-success, .text-success {
    color: #28a745;
}

.bg-success {
    background-color: #28a745;
    color: white;
}

/* 警告状态 */
.status-warning, .text-warning {
    color: #ffc107;
}

.bg-warning {
    background-color: #ffc107;
    color: #212529;
}

/* 错误状态 */
.status-error, .text-error {
    color: #dc3545;
}

.bg-error {
    background-color: #dc3545;
    color: white;
}

/* 信息状态 */
.status-info, .text-info {
    color: #17a2b8;
}

.bg-info {
    background-color: #17a2b8;
    color: white;
}

/* 主要状态 */
.status-primary, .text-primary {
    color: #2196f3;
}

.bg-primary {
    background-color: #2196f3;
    color: white;
}

/* 次要状态 */
.text-secondary {
    color: #6c757d;
}

.bg-secondary {
    background-color: #6c757d;
    color: white;
}

/* 静音状态 */
.text-muted {
    color: #6c757d;
}

/* =============================================================================
   特殊组件样式
============================================================================= */

/* 快捷键显示 */
.shortcut-display {
    background-color: #f8f9fa;
    border: 1px solid #dee2e6;
    color: #6c757d;
}

/* 无配置提示 */
.no-config-text {
    color: #6c757d;
}

/* 插件描述 */
.description-text {
    color: #6c757d;
}

/* 错误文本 */
.error-text {
    color: #dc3545;
    background-color: #f8d7da;
    border: 1px solid #f5c6cb;
}

/* 自定义组件浅色主题覆盖 */
#welcome-title {
    color: #333333;
}

#welcome-subtitle {
    color: #666666;
}

#welcome-description {
    color: #555555;
    background-color: #f8f9fa;
    border: none;
}

#plugin-list-title {
    color: #1976d2;
}

#no-plugins-text {
    color: #999999;
}

#plugin-button {
    background-color: #f8f9fa;
    border: none;
    color: #333333;
}

#plugin-button:hover {
    background-color: #2196f3;
    color: white;
}

#plugin-button-disabled {
    background-color: #f5f5f5;
    color: #999999;
    border: none;
}

/* Plugin Manager Dialog 特定样式 */
#plugin-manager-dialog QLabel {
    border: none;
}

#plugin-manager-dialog QPushButton {
    border: none;
    background-color: #f8f9fa;
    color: #333333;
    padding: 8px 16px;
    border-radius: 4px;
}

#plugin-manager-dialog QPushButton:hover {
    background-color: #e9ecef;
}

#plugin-manager-dialog QPushButton:pressed {
    background-color: #dee2e6;
}

#plugin-item-widget {
    background-color: #ffffff;
    border: 1px solid #dee2e6;
    border-radius: 6px;
    margin: 2px;
    padding: 4px;
}

#plugin-item-widget:hover {
    background-color: #f8f9ff;
    border-color: #adb5bd;
}

#plugin-item-widget QLabel {
    border: none;
    background: transparent;
}

#plugin-item-widget QPushButton {
    border: none;
    background: transparent;
}

#plugin-item-widget QCheckBox {
    border: none;
}

#plugin-config-button {
    border: none;
    background: transparent;
    padding: 4px;
    border-radius: 3px;
}

#plugin-config-button:hover {
    background-color: #e9ecef;
}

#plugin-available-label-available {
    color: #28a745;
    font-weight: bold;
}

#plugin-available-label-unavailable {
    color: #dc3545;
    font-weight: bold;
}

#plugin-info-label {
    color: #6c757d;
}

#plugin-description-label {
    color: #495057;
}

#plugin-error-label {
    color: #dc3545;
    background-color: #f8d7da;
    padding: 4px;
    border-radius: 3px;
}

/* 插件列表标题 */
.plugin-list-title {
    color: #2196f3;
}

/* 无插件提示 */
.no-plugins-text {
    color: #6c757d;
}

/* 状态指示器 */
.status-enabled {
    background-color: #28a745;
    color: white;
}

.status-disabled {
    background-color: #dc3545;
    color: white;
}

.status-loading {
    background-color: #2196f3;
    color: white;
}